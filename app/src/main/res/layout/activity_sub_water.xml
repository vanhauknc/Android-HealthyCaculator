<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".subWaterActivity">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:background="#1234"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="LƯỢNG NƯỚC CẦN THIẾT HÀNG NGÀY"
        ></TextView>









    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cân nặng :"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textStyle="bold"
            ></TextView>

        <EditText
            android:id="@+id/waterCannang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="55"
            android:inputType="number"
            android:text=""></EditText>


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/waterTinhtoan"
            android:layout_width="139dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:background="#00a8ff"
            android:drawableLeft="@drawable/icons8_calculator_40px"
            android:text="Tính toán">

        </Button>

        <Button
            android:id="@+id/waterReset"
            android:layout_width="153dp"
            android:layout_height="wrap_content"
            android:background="#00a8ff"
            android:drawableLeft="@drawable/icons8_replace_40px"
            android:text="thiết lập lại">

        </Button>

    </LinearLayout>


    <TextView
        android:id="@+id/txtwater"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:text=""
        android:textSize="20dp"
        android:gravity="center"
        android:textColor="#4cd137"
        android:layout_height="wrap_content">

    </TextView>

    <TextView
        android:id="@+id/txtnotewater"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:text=""
        android:layout_height="wrap_content">

    </TextView>

    <ImageView
        android:id="@+id/imgTtwater"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ></ImageView>




</LinearLayout>