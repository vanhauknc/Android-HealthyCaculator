<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cuim"
    android:orientation="vertical"
    tools:context=".RegisterActivity">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/cal"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"

        ></ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Heath Calculator"
        android:gravity="center"
        android:textColor="#dff9fb"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"

        >

    </TextView>


    <EditText
        android:id="@+id/edtuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:ems="15"
        android:hint="Username"
        android:inputType="text"
        android:textColor="#009688"
        android:textColorHint="#badc58"
        android:textSize="20sp"
        android:textStyle="bold"></EditText>

    <EditText
        android:id="@+id/edtpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:ems="15"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#009688"
        android:textColorHint="#badc58"
        android:textSize="20sp"
        android:textStyle="bold"></EditText>

    <EditText
        android:id="@+id/edtrepass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:ems="15"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:textColor="#009688"
        android:textColorHint="#badc58"
        android:textSize="20sp"
        android:textStyle="bold"></EditText>


    <Button
        android:id="@+id/btndangki"
        android:layout_width="122dp"
        android:layout_height="62dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:drawableLeft="@drawable/ic_pie_chart_black_24dp"
        android:text="Đăng kí"
        android:textColor="#30336b"
        android:textStyle="bold"></Button>



</LinearLayout>